<!DOCTYPE html>
<html>
    <head>
        <title>Etherpad::Admin</title>

        <meta http-equiv="Content-type" content="text/html;charset=UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link href="<%= $self->config->{urlprefix} %><%= url_for 'home' %>css/bootstrap.min.css" rel="stylesheet" media="screen">
        <style>
            body {
                padding-top: 60px;
            }
        </style>
        <link href="<%= $self->config->{urlprefix} %><%= url_for 'home' %>css/bootstrap-responsive.min.css" rel="stylesheet" media="screen">
    </head>
    <body id="Body">
        <div id="topbar" class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="<%= $self->config->{urlprefix} %><%= url_for 'home' %>">Etherpad::Admin</a>
                    <a class="btn" href="<%= $self->config->{urlprefix} %><%= url_for 'home' %>"><i class="icon-refresh"></i></a>
                    <form class="navbar-form pull-right form-inline">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-edit"></i></span>
                            <input class="span2" id="newpad" type="text" placeholder="Nom du nouveau pad">
                        </div>
                        <button type="submit" class="btn" onClick="window.open('<%= $self->config->{etherpadurl}.'/p/'%>'+$(newpad).val());window.location.href='<%= $self->config->{urlprefix} %><%= url_for 'home' %>';">Cr&eacute;er un nouveau pad</button>
                    </form>
                </div>
            </div>
        </div>

        <script src="<%= $self->config->{urlprefix} %><%= url_for 'home' %>js/jquery-latest.js"></script>
        <script src="<%= $self->config->{urlprefix} %><%= url_for 'home' %>js/bootstrap.min.js"></script>

        <div class="container">
            <div class="row-fluid">
                <%= content %>
            </div>
        </div>
    </body>
</html>
